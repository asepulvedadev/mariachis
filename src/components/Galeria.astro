---
// Galeria.astro
---

<section id="galeria" class="section bg-white relative overflow-hidden">
  <!-- Decorative Elements -->
  <div
    class="absolute top-0 right-0 w-64 h-64 bg-mariachi-primary opacity-10 rounded-full -translate-y-1/2 translate-x-1/3"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 w-80 h-80 bg-mariachi-accent opacity-10 rounded-full translate-y-1/3 -translate-x-1/4"
  >
  </div>

  <div class="container relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Nuestra <span class="text-mariachi-primary">Galería</span>
      </h2>
      <p class="text-mariachi-dark/70 max-w-3xl mx-auto">
        Momentos inolvidables capturados en nuestras presentaciones y eventos.
      </p>
      <div class="w-24 h-1 bg-mariachi-accent mx-auto mt-6"></div>
    </div>

    <!-- Filtros de Galería -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button class="filter-btn active" data-filter="all">Todos</button>
      <button class="filter-btn" data-filter="bodas">Bodas</button>
      <button class="filter-btn" data-filter="eventos">Eventos</button>
      <button class="filter-btn" data-filter="serenatas">Serenatas</button>
      <button class="filter-btn" data-filter="festivales">Festivales</button>
    </div>

    <!-- Galería de Imágenes -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
      id="gallery-container"
    >
      <!-- Imagen 1 -->
      <div class="gallery-item bodas" data-aos="zoom-in" data-aos-delay="100">
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img
            src="/images/gallery/boda-1.jpg"
            alt="Mariachi en boda"
            class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
            onerror="this.src='https://images.unsplash.com/photo-1511795409834-ef04bbd61622?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1169&q=80'; this.onerror=null;"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end"
          >
            <div class="p-4">
              <h3 class="text-white font-bold">Boda Romántica</h3>
              <p class="text-white/80 text-sm">Hacienda Los Olivos</p>
            </div>
          </div>
          <div class="absolute top-4 right-4">
            <button
              class="gallery-zoom bg-white/80 hover:bg-white w-10 h-10 rounded-full flex items-center justify-center transition-colors duration-300"
            >
              <i class="fas fa-search-plus text-mariachi-dark"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Imagen 2 -->
      <div class="gallery-item eventos" data-aos="zoom-in" data-aos-delay="200">
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img
            src="/images/gallery/evento-1.jpg"
            alt="Mariachi en evento corporativo"
            class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
            onerror="this.src='https://images.unsplash.com/photo-1511578314322-379afb476865?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1169&q=80'; this.onerror=null;"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end"
          >
            <div class="p-4">
              <h3 class="text-white font-bold">Evento Corporativo</h3>
              <p class="text-white/80 text-sm">Hotel Presidente</p>
            </div>
          </div>
          <div class="absolute top-4 right-4">
            <button
              class="gallery-zoom bg-white/80 hover:bg-white w-10 h-10 rounded-full flex items-center justify-center transition-colors duration-300"
            >
              <i class="fas fa-search-plus text-mariachi-dark"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Imagen 3 -->
      <div
        class="gallery-item serenatas"
        data-aos="zoom-in"
        data-aos-delay="300"
      >
        <div class="relative overflow-hidden rounded-lg group cursor-pointer">
          <img
